{
	"name": "@synpatico/core",
	"version": "1.0.0",
	"private": false,
	"description": "Core protocol engine for Synpatico, providing stateless serialization and data structure management.",
	"author": "Michael Sweeney <overthemike@gmail.com>",
	"type": "module",
	"source": "./src/index.ts",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"require": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.cjs"
			},
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		}
	},
	"scripts": {
		"build": "pnpm run clean && pnpm run build:types && pnpm run build:js",
		"build:types": "tsc --emitDeclarationOnly --declarationMap",
		"build:js": "tsup",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "changeset publish",
		"clean": "rm -rf dist",
		"lint": "biome lint",
		"lint:fix": "biome lint --fix",
		"test": "vitest run",
		"typecheck": "tsc --noEmit",
		"prepublishOnly": "pnpm run build",
		"bench": "vitest bench",
		"coverage": "vitest run --coverage",
		"test:ui": "vitest --ui"
	},
	"files": [
		"dist",
		"README.md"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/synpatico/core.git"
	},
	"bugs": {
		"url": "https://github.com/synpatico/core/issues"
	},
	"homepage": "https://github.com/synpatico/core",
	"license": "MIT",
	"dependencies": {
		"@synpatico/genome": "^1.0.2"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.5",
		"@types/node": "^20.19.9",
		"@vitest/coverage-v8": "^3.0.9",
		"@vitest/ui": "^3.0.9",
		"tsup": "^8.0.2",
		"typescript": "^5.4.5",
		"vite": "^6.2.3",
		"vitest": "^3.0.9"
	}
}
